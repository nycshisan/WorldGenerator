{
    "map": {
        "width": 8192,
        "height": 8192,
        "randomSeed": 48196648
    },
    "ui": {
        "mapScaleInversion": 10,
        "updateFPSFrameInterval": 30,
        "scale": 2.0,
        "font": "assets/PingFang.ttc"
    },
    "output": {
        "directory": "output/",
        "autosave": true
    },
    "install": {
        "enable": true,
        "target": "../../EliGame/Assets/Resources/"
    },
    "centers": {
        "number": 500,
        "padding": 50,
        "span": 50,
        "outputPath": "Map/centers.txt"
    },
    "delaunay": {
        "showBoundingTriangles": false
    },
    "lloyd": {
        "factor": 0.6,
        "iteration": 1
    },
    "blocks": {
        "outputPath": "Map/blocks.bytes"
    },
    "blockEdges": {
        "segmentNumber": [3, 6],
        "curveSpan": [0.05, 0.15],
        "segmentDist": [0.1, 0.9],
        "minSegmentInterval": 0.15,
        "controlPointSpan": [0.05, 0.15],
        "curveStep": 0.03
    },
    "distField": {
        "outputPath": "Map/edgeDF.bytes",
        "size": 2048
    },
    "heightMap": {
        "width": 1025,
        "height": 1025,
        "outputPath": "Map/heights.bytes"
    }
}